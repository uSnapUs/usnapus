<section class="container">
  <div class="row span12">
    
    <%= form_for Event.new, html: {class: "new_event event span4"} do |f| %>
      <div class="container">
        <h2>Your Event</h2>
        <div id="float_over_google_map">
          <%= f.text_field :location, "placeholder" => "Where's your event?" %>
          <%= f.hidden_field :latitude %>
          <%= f.hidden_field :longitude %>
        </div>
        <div id="google_map">
        </div>
        <div class="datepicker" data-input="#event_starts">
        <%= f.hidden_field :starts %>
        <%= f.hidden_field :ends %>
      </div>
    <% end %>
    
  </div>
</section>

<% content_for(:post_scripts) do %>
  <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>
  <%= stylesheet_link_tag "jquery-ui-1.8.18" %>
<% end %>
<% content_for(:jquery) do %>
  $(".datepicker").datepicker({
		changeMonth: true,
		changeYear: true,
		showOtherMonths: true,
		selectOtherMonths: true,
		minDate: 0,
		altField: "#event_starts, #event_ends"
	});
<% end %>